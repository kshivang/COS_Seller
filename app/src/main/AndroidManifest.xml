<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.invincible.cosseller">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.SplashScreen"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.ForgotPasswordScreen"
            android:screenOrientation="portrait" />

        <activity android:name=".activity.LoginScreen"
            android:screenOrientation="portrait"/>

        <activity android:name=".appIntro.BriefIntro"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.HomeScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>

    </application>

</manifest>
